---
import { Icon } from 'astro-icon/components';

const socialLinks = [
  { name: 'LinkedIn', icon: 'fa6-brands:linkedin', url: 'https://www.linkedin.com/in/sahiljohari12/' },
  { name: 'GitHub', icon: 'fa6-brands:github', url: 'https://github.com/sahiljohari' },
  { name: 'Twitter', icon: 'fa6-brands:twitter', url: 'https://twitter.com/Sahil_johari' },
  { name: 'Instagram', icon: 'fa6-brands:instagram', url: 'https://instagram.com/colo_rcaptures' },
  { name: 'Email', icon: 'fa6-solid:envelope', url: 'mailto:sahiljohari12@gmail.com' },
];
---

<ul class="social-links">
  {socialLinks.map(link => (
    <li>
      <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.name}>
        <Icon name={link.icon} />
      </a>
    </li>
  ))}
</ul>

<style>
  .social-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .social-links a {
    color: var(--text-secondary, #64748b);
    transition: color 0.2s ease, transform 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-links a:hover {
    color: var(--accent-color, #6366f1);
    transform: translateY(-2px);
  }

  .social-links [data-icon] {
    width: 1.5rem;
    height: 1.5rem;
  }
</style>
