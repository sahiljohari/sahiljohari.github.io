---
import SocialLinks from './SocialLinks.astro';
---

<section class="intro-section">
  <div class="intro-content">
    <p class="greeting">Hi, I'm</p>
    <h1 class="name">Sahil.</h1>
    <p class="description">
      I am a <span class="highlight">Software Engineer</span> by profession and an artist by passion. 
      Known for my sharp attention to detail and simplification skills, I love to bring astonishing 
      ideas to life. You are looking at one right now!
    </p>
    <div class="cta-container">
      <a href="/assets/resume.pdf" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
        Resume
      </a>
    </div>
    <div class="social-container">
      <SocialLinks />
    </div>
  </div>
  <div class="intro-illustration">
    <img src="/assets/svgs/intro-page-svg.svg" alt="Developer illustration" />
  </div>
</section>

<style>
  .intro-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4rem;
    padding: 6rem 2rem 4rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .intro-content {
    flex: 1;
    max-width: 600px;
  }

  .greeting {
    font-size: 1.25rem;
    color: var(--text-secondary, #64748b);
    margin-bottom: 0.5rem;
  }

  .name {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    color: var(--text-primary, #1e293b);
    margin: 0 0 1.5rem;
    line-height: 1.1;
  }

  .description {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-secondary, #64748b);
    margin-bottom: 2rem;
  }

  .highlight {
    color: var(--accent-color, #6366f1);
    font-weight: 600;
  }

  .cta-container {
    margin-bottom: 2.5rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: var(--accent-color, #6366f1);
    color: white;
  }

  .btn-primary:hover {
    background: var(--accent-hover, #4f46e5);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);
  }

  .intro-illustration {
    flex: 1;
    max-width: 500px;
  }

  .intro-illustration img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 900px) {
    .intro-section {
      flex-direction: column-reverse;
      text-align: center;
      padding-top: 8rem;
    }

    .intro-content {
      max-width: 100%;
    }

    .intro-illustration {
      max-width: 300px;
    }

    .social-container {
      display: flex;
      justify-content: center;
    }
  }
</style>
